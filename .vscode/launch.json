    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - cert and key file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "env": {
                "GOWEB_X509_CER": "${fileDirname}/certs/demo.pem",
                "GOWEB_X509_KEY": "${fileDirname}/certs/demo-key.pem"
            }            
        },
        {
            "name": "Debug - bundle",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {
                "GOWEB_X509_BUNDLE": "${fileDirname}/certs/bundle.pem"
            }
        }
    ]
}